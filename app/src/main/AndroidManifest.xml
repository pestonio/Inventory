<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.inventory">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"  />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InventoryMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddOrEditProduct"
            android:parentActivityName=".InventoryMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".InventoryMain" />
        </activity>
        <activity
            android:name=".DetailView"
            android:parentActivityName=".InventoryMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".InventoryMain" />
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <data android:scheme="mailto" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <provider
            android:name=".Data.InventoryContentProvider"
            android:authorities="com.example.android.inventory"
            android:exported="false" />
    </application>

</manifest>