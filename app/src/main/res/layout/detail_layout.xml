<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/product_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_img"
            tools:text="Product Name"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: "
            android:layout_marginTop="14dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/product_img"
            android:layout_toEndOf="@+id/product_img"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50:00"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/product_img"
            android:layout_alignEnd="@+id/product_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â£ "
            android:id="@+id/textView6"
            android:layout_alignBaseline="@+id/price_detail"
            android:layout_alignBottom="@+id/price_detail"
            android:layout_toLeftOf="@+id/price_detail"
            android:layout_toStartOf="@+id/price_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Description: "
            android:id="@+id/textView2"
            android:layout_below="@+id/product_name_detail"
            android:layout_toRightOf="@+id/product_img"
            android:layout_toEndOf="@+id/product_img" />

        <TextView
            android:id="@+id/product_desc_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Product Description"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales to Date: "
            android:id="@+id/textView3"
            android:layout_below="@+id/product_desc_detail"
            android:layout_toRightOf="@+id/product_img"
            android:layout_toEndOf="@+id/product_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currently in Stock: "
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_toRightOf="@+id/product_img"
            android:layout_toEndOf="@+id/product_img" />

        <TextView
            android:id="@+id/sales_to_date_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="250"
            android:layout_above="@+id/current_qty_detail"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <TextView
            android:id="@+id/current_qty_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="500"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/sales_to_date_detail"
            android:layout_alignStart="@+id/sales_to_date_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:id="@+id/textView5"
            android:layout_below="@+id/product_img"
            android:layout_alignLeft="@+id/product_img"
            android:layout_alignStart="@+id/product_img" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
    <EditText
        android:id="@+id/adjust_qty_by"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:maxLength="3"
        android:gravity="center"
        android:hint="Qty"/>
    <Button
        android:id="@+id/sell_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginRight="10dp"
        android:text="SELL" />
    <Button
        android:id="@+id/receive_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="10dp"
        android:text="RECEIVE" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:gravity="center"
        android:text="To edit or delete this product; use the options menu at the top of the page."/>


</LinearLayout>
    </ScrollView>